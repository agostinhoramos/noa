sudo npm install pm2@latest -g
pm2 startup systemd
sudo env PATH=$PATH:/usr/bin /usr/local/lib/node_modules/pm2/bin/pm2 startup systemd -u webmaster --hp /home/webmaster
pm2 save
sudo systemctl start pm2-webmaster
systemctl status pm2-webmaster
pm2 stop 
pm2 restart 
pm2 info
pm2 monit

sudo systemctl stop pm2-webmaster
sudo systemctl start pm2-webmaster