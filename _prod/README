# Install PM2
sudo npm install pm2@latest -g

# Set RUN path
pm2 start app.js --name NOA
pm2 save --force

# Get permission to restart
sudo env PATH=$PATH:/usr/bin pm2 startup ubuntu -u webmaster --hp /home/webmaster

pm2 restart NOA
pm2 reload NOA
pm2 stop NOA
pm2 delete NOA

## Read more about in 
## https://pm2.keymetrics.io/docs/usage/pm2-doc-single-page/
## https://pm2.keymetrics.io/docs/usage/startup/